{% extends 'base.html.twig' %}
{% block title %}Create new post{% endblock %}
{% block body %}


    <div class="contact" style="padding-top: 100px">
        <div class="container">

            <div class="section-title">
                <h2>Post</h2>
            </div>


            <div class="php-email-form mt-4">
                {{ form_start(formPost) }}
                <div class="form-group mt-3">
                    {{ form_widget(formPost.title) }}
                </div>
                <div class="form-group mt-3">
                    {{ form_widget(formPost.content) }}
                </div>
                <div class="form-group mt-3">
                    {{ form_widget(formPost.image) }}
                </div>
                <div class="text-center" style="margin-top: 30px;"><button type="submit">Post</button></div>
                {{ form_end(formPost) }}
            </div>

        </div>
    </div><!-- End Contact Section -->

{% endblock %}